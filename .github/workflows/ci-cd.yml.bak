name: CI

on:
  push:
    branches: [ main, setup ]
  pull_request:
    branches: [ main ]

jobs:
  test:
    runs-on: ubuntu-latest
    
    strategy:
      matrix:
        node-version: [18.x]
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Use Node.js ${{ matrix.node-version }}
      uses: actions/setup-node@v3
      with:
        node-version: ${{ matrix.node-version }}
        cache: 'npm'
    
    - name: Install dependencies
      run: |
        npm ci
        npx jest --version
    
    - name: Create test environment file
      run: |
        echo "NODE_ENV=test" > .env
        echo "JWT_SECRET=test-secret-for-github-actions-2024" >> .env
        echo "PORT=3000" >> .env
    
    - name: Run tests
      run: |
        chmod +x ./node_modules/.bin/jest
        npm test
      env:
        NODE_ENV: test
        JWT_SECRET: test_jwt_secret_for_ci_123456
      
    - name: Run build
      run: npm run build