#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('p3-32057736:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3001');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
/**
 * Listen on provided port, on all network interfaces.
 */

// Sincronizar base de datos antes de arrancar el servidor
const { syncDatabase } = require('../database');

// Manejo global de errores no atrapados para evitar salidas silenciosas
process.on('unhandledRejection', (reason, p) => {
  console.error('Unhandled Rejection at:', p, 'reason:', reason);
});
process.on('uncaughtException', (err) => {
  console.error('Uncaught Exception thrown:', err);
  // Dependiendo de la política, podríamos process.exit(1) aquí. Por ahora sólo logueamos.
});

async function startServer() {
  try {
    await syncDatabase();
    server.listen(port);
    console.log('Starting server (listen called) on port ' + port);
    server.on('error', onError);
    server.on('listening', onListening);
  } catch (err) {
    console.error('Failed to sync database, starting server anyway. Error:', err);
    // Intentamos arrancar el servidor aunque falle la sincronización para que la API esté disponible
    try {
      server.listen(port);
      console.log('Starting server (fallback) on port ' + port);
      server.on('error', onError);
      server.on('listening', onListening);
    } catch (e) {
      console.error('Failed to start server after DB sync failure:', e);
      process.exit(1);
    }
  }
}

startServer();

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
  // Mostrar siempre en consola para que `npm start` muestre el estado del servidor
  console.log('Server is listening on ' + bind);
}
